<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list >
            <item>
                <shape android:shape="rectangle">
                    <stroke
                        android:width="1dp"
                        android:color="@color/orange_salmon"
                        android:shape="rectangle" />
                    <corners android:radius="@dimen/len_6"/>
                </shape>
            </item>
            <item
                android:bottom="3dp"
                android:left="3dp"
                android:right="3dp"
                android:top="3dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/gray_dividing" />
                    <corners android:radius="@dimen/len_6"/>
                </shape>

            </item>

        </layer-list>
    </item>
    <item>
        <layer-list >
            <item>
                <shape android:shape="rectangle">
                    <stroke
                        android:width="1dp"
                        android:color="@color/gray_dividing"
                        android:shape="rectangle" />
                    <corners android:radius="@dimen/len_6"/>
                </shape>
            </item>
            <item
                android:bottom="3dp"
                android:left="3dp"
                android:right="3dp"
                android:top="3dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/orange_salmon" />
                    <corners android:radius="@dimen/len_6"/>
                </shape>

            </item>

        </layer-list>
    </item>
</selector>

