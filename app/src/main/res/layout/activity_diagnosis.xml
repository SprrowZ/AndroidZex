<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/get_route_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="getRouteIp"
        android:textSize="@dimen/font_24"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/judge_wifi_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="judgeWifiState"
        android:textSize="@dimen/font_24"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/get_route_ip" />

    <Button
        android:id="@+id/ping_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pingServer"
        android:textSize="@dimen/font_24"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/judge_wifi_state" />

    <com.rye.catcher.project.netdiagnosis.NetEllipsisView
        android:id="@+id/ellipsis_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/len_24"
        app:dotRadius="@dimen/len_10"
        android:background="@color/gray_3"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ping_server" />

</androidx.constraintlayout.widget.ConstraintLayout>