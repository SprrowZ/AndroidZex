<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_64"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="TITLE"
        android:gravity="center"
        android:textSize="@dimen/font_16"
        android:background="@color/white"
        tools:ignore="MissingConstraints" />
    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:layout_constraintBottom_toBottomOf="@+id/title"
        tools:background="@color/soft27"
        >
    </RelativeLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/design_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/main_bottom"
        app:elevation="@dimen/len_2"
        app:itemBackground="@drawable/bottom_bk2"
        app:itemIconTint="@color/nav_bottom_item"
        app:itemTextColor="@color/nav_bottom_item"
        android:fitsSystemWindows="true"
        app:layout_constraintBottom_toBottomOf="@id/container"
        >

    </android.support.design.widget.BottomNavigationView>
</android.support.constraint.ConstraintLayout>