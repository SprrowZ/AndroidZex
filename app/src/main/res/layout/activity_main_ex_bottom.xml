<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/bottom_bk3"
    >

    <LinearLayout
        android:id="@+id/message"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        >
        <ImageView
            android:id="@+id/message_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_normal1"
            android:clickable="false"
            />
        <TextView
            android:id="@+id/message_tv"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="消息"
            android:textColor="@color/bottom_gray"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/friend"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        >
        <ImageView
            android:id="@+id/friend_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_normal2"
            android:clickable="false"
            />
        <TextView
            android:id="@+id/friend_tv"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="联系人"
            android:textColor="@color/bottom_gray"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dynamic"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        >
        <ImageView
            android:id="@+id/dynamic_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_normal3"
            android:clickable="false"
            />
        <TextView
            android:id="@+id/dynamic_tv"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="动态"
            android:textColor="@color/bottom_gray"
            />

    </LinearLayout>
</LinearLayout>