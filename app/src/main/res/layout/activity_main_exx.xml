<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
<RelativeLayout
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



 <android.support.design.widget.BottomNavigationView
     android:id="@+id/design_bottom_sheet"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_alignParentBottom="true"
     app:menu="@menu/main_bottom"
     app:elevation="@dimen/len_2"
     app:itemBackground="@drawable/bottom_bk2"
     app:itemIconTint="@color/nav_bottom_item"
     app:itemTextColor="@color/nav_bottom_item"
     android:fitsSystemWindows="true"
     >

 </android.support.design.widget.BottomNavigationView>
</RelativeLayout>
<android.support.design.widget.NavigationView
    android:id="@+id/design_nav_view"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    >
 <!--app:headerLayout="@layout/left_details"-->
</android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>