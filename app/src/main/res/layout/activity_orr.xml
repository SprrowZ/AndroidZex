<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rye.catcher.activity.ORRActivity"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Okhttp+Retrofit+Rxjava"
        android:textSize="@dimen/font_24"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:autoLink="all"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/len_40"
        >
        <Button
            android:id="@+id/okhttp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Okhttp"
            android:textAllCaps="false"
            android:background="@drawable/btn_selector_done"
            android:layout_marginLeft="@dimen/len_10"
            />
        <Button
            android:id="@+id/retrofit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Retrofit"
            android:textAllCaps="false"
            android:background="@drawable/btn_selector_done"
            android:singleLine="true"
            android:layout_marginLeft="@dimen/len_10"
            />
        <Button
            android:id="@+id/rxjava"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Rxjava"
            android:textAllCaps="false"
            android:background="@drawable/btn_selector_done"
            android:layout_marginLeft="@dimen/len_10"
            />
        <Button
            android:id="@+id/orr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ORR"
            android:textAllCaps="false"
            android:background="@drawable/btn_selector_done"
            android:layout_marginLeft="@dimen/len_10"
            android:layout_marginRight="@dimen/len_10"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/len_6"
        android:background="@color/gray_dividing"
        />
<FrameLayout
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    >

</FrameLayout>
</LinearLayout>
