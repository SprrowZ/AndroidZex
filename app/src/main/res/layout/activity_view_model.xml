<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rye.catcher.activity.ViewModelActivity"

    >
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/soft2"
        >
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Score"
         android:textAllCaps="false"
         android:textSize="@dimen/font_28"
         android:layout_centerHorizontal="true"
         android:layout_above="@+id/score1"
         android:textStyle="bold"
         />
     <TextView
         android:id="@+id/score1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="0"
         android:textSize="@dimen/font_20"
         android:layout_centerInParent="true"
         android:layout_marginTop="@dimen/len_36"
         />
     <Button
         android:id="@+id/add1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Add+1"
         android:layout_below="@+id/score1"
         android:layout_centerHorizontal="true"
         android:background="@color/soft17"
         android:layout_marginTop="@dimen/len_36"
         android:textSize="@dimen/font_24"
         />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/soft25"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score"
            android:textAllCaps="false"
            android:textSize="@dimen/font_28"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/score2"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/score2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="@dimen/font_20"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/len_36"
            />
        <Button
            android:id="@+id/add2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add+1"
            android:layout_below="@+id/score2"
            android:layout_centerHorizontal="true"
            android:background="@color/soft17"
            android:layout_marginTop="@dimen/len_36"
            android:textSize="@dimen/font_24"
            />

    </RelativeLayout>
</LinearLayout>
