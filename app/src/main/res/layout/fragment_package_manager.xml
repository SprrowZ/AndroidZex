<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.rye.catcher.activity.fragment.PackageManagerFragment"
    android:orientation="vertical"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_156"
        app:cardCornerRadius="@dimen/len_10"
        app:cardElevation="@dimen/len_10"
        android:layout_margin="@dimen/len_6"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="packageInfo"
                style="@style/btn_style_done_new"
                android:layout_gravity="top"
                />
            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="第三方应用"
                style="@style/btn_style_done_new"

                />
            <TextView
                android:id="@+id/tv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OpenWeChat"
                style="@style/btn_style_done_new"
                android:layout_gravity="bottom"
                />
        </LinearLayout>

    </android.support.v7.widget.CardView>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/appName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="fuckAll"
            style="@style/tv_style_normal"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="fullIt"
            style="@style/tv_style_normal"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="fullIt"
            style="@style/tv_style_normal"
            />
    </LinearLayout>
</ScrollView>

</LinearLayout>
