<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.rye.catcher.activity.fragment.orr.RxjavaFragment"
    android:background="@color/black"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/soft19"
        android:orientation="horizontal"
        >
     <android.support.v7.widget.CardView
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:layout_weight="2"
         app:cardCornerRadius="@dimen/len_24"
         app:cardElevation="@dimen/len_24"
         >
     <TextView
         android:id="@+id/btn1"
         android:text="simple"
         style="@style/btn_style_red"
         android:layout_gravity="top"
         />

         <TextView
             android:id="@+id/btn2"
             android:text="simple"
             style="@style/btn_style_red"
             android:layout_gravity="center"
             />
         <TextView
             android:id="@+id/btn3"
             android:text="simple"
             style="@style/btn_style_red"
             android:layout_gravity="bottom"
             />
     </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/soft19"
            >

        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/soft9"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/len_12"
        >
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/soft9"
            >

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            app:cardCornerRadius="@dimen/len_24"
            app:cardElevation="@dimen/len_24"
            >
            <TextView
                android:id="@+id/btn4"
                android:text="simple"
                style="@style/btn_style_red"
                android:layout_gravity="top"
                />

            <TextView
                android:id="@+id/btn5"
                android:text="simple"
                style="@style/btn_style_red"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/btn6"
                android:text="simple"
                style="@style/btn_style_red"
                android:layout_gravity="bottom"
                />
        </android.support.v7.widget.CardView>

   
        
    </LinearLayout>
</LinearLayout>
