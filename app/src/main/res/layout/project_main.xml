<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/activity_top_title" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/control_border"
                android:orientation="horizontal"
                android:paddingBottom="7dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="7dp">

                <TextView
                    android:id="@+id/search_bar"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/control_border"
                    android:drawableLeft="@mipmap/icon_title_bar_edit_search"
                    android:gravity="center_vertical"
                    android:padding="3dp"
                    android:text="@string/search"
                    android:textColor="#CCCCCC" />

            </LinearLayout>

            <Button
                android:id="@+id/popup"
                style="@style/project_activity_btn"
                android:text="PopupWindow"
                />

            <Button
                android:id="@+id/sliding"
                style="@style/project_activity_btn"
                android:text="滑动冲突"
                />

            <Button
                android:id="@+id/dbtest"
                style="@style/project_activity_btn"
                android:text="数据库相关"
                />

            <Button
                android:id="@+id/file"
                style="@style/project_activity_btn"
                android:text="FileStorage"
                />
            <Button
                android:id="@+id/menu"
                style="@style/project_activity_btn"
                android:text="Menu"
                />
            <Button
                android:id="@+id/drawable"
                style="@style/project_activity_btn"
                android:text="Drawable"
                />
            <Button
                android:id="@+id/shape"
                style="@style/project_activity_btn"
                android:text="Shape"
                />
            <Button
                android:id="@+id/service"
                style="@style/project_activity_btn"
                android:text="Service"
                />
            <Button
                android:id="@+id/recyclerView"
                style="@style/project_activity_btn"
                android:text="RecycleView"
                />
            <Button
                android:id="@+id/callPhone"
                style="@style/project_activity_btn"
                android:text="callPhone"
                />
            <Button
                android:id="@+id/sendSMS"
                style="@style/project_activity_btn"
                android:text="sendSMS"
                />
            <Button
                android:id="@+id/sendEmail"
                style="@style/project_activity_btn"
                android:text="sendEmail"
                />
            <Button
                android:id="@+id/dialogs"
                style="@style/project_activity_btn"
                android:text="DialogEx" />
            <Button
                android:id="@+id/coor"
                style="@style/project_activity_btn"
                android:text="CoordinatorLayout" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>