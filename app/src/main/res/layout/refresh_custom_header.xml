<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/len_80"
    >
    <RelativeLayout
        android:id="@+id/pullDown"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <TextView
            android:id="@+id/tv"
            android:layout_width="@dimen/len_100"
            android:layout_height="@dimen/len_56"
            android:text="请下拉"
            android:textSize="@dimen/font_18"
            android:gravity="center"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/len_44"
            android:layout_height="@dimen/len_56"
            android:src="@drawable/pull_down"
            android:layout_toLeftOf="@+id/tv"
            android:layout_marginLeft="@dimen/len_56"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/pullUp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/tv2"
            android:layout_width="@dimen/len_100"
            android:layout_height="@dimen/len_56"
            android:text="松开刷新"
            android:textSize="@dimen/font_18"
            android:gravity="center"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:id="@+id/image2"
            android:layout_width="@dimen/len_44"
            android:layout_height="@dimen/len_56"
            android:src="@drawable/pull_up"
            android:layout_toLeftOf="@+id/tv2"
            android:layout_marginLeft="@dimen/len_56"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>
<com.zyao89.view.zloading.ZLoadingView
    android:id="@+id/loadingView"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:z_type="StarBuilder"
    app:z_color="@color/fuckAlpha"
    />
</LinearLayout>