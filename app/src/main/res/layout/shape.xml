<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:id="@+id/name"
    android:text="@string/someting_new"
    android:layout_centerHorizontal="true"
    android:textSize="30sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <Button
        android:id="@+id/orr"
        android:text="待定"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_one"
        android:layout_marginLeft="20dp"
        android:layout_alignBaseline="@+id/javaMore"
        android:layout_alignBottom="@+id/javaMore"
        android:layout_alignParentStart="true"
        android:layout_marginStart="21dp" />
    <Button
        android:id="@+id/javaMore"
        android:text="待定"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_two"
        />
    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/javaMore"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/someDemo"
            android:text="待定"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_three"
            />
        <Button
            android:id="@+id/retrofit"
            android:text="待定"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn5"
            android:text="待定"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btn6"
            android:text="待定"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn7"
            android:text="待定"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn8"
            android:text="待定"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ImageView
        android:id="@+id/iv"
        android:layout_below="@+id/linear2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/shape_three"
        />
<TextView
    android:id="@+id/tv1"
    android:layout_width="match_parent"
    android:layout_height="5dp"
    android:background="@drawable/shape_four"
    android:layout_below="@+id/iv"
    android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_five"
        android:layout_below="@+id/tv1"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/tv3"
        android:text="Ring"
        android:gravity="center"
        android:layout_below="@+id/tv2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/shape_six"
        />
</RelativeLayout>