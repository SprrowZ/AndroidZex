<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Trans">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
      <item name="android:backgroundDimEnabled">false</item>
        <item name="android:screenOrientation">portrait</item>
    </style>
    <style name="SelfInformation">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingTop">6dp</item>
    </style>
    <style name="TitleSize">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="ToolbarNoPadding" parent="Base.V7.Widget.AppCompat.Toolbar">
        <item name="android:minWidth">0dp</item>
    </style>

    <!--扇形按钮选择-->
    <style name="MenuStyle">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">right|bottom</item>
    </style>

    <style name="MenuItemStyle">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_gravity">right|bottom</item>
    </style>
    <!--按钮-->
    <style name="btn_style_parent">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="btn_style_red" parent="@style/btn_style_parent">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_selector_done</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <!--TextView-->
    <style name="tv_style_parent">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">@dimen/len_4</item>
        <item name="android:layout_marginBottom">@dimen/len_4</item>
    </style>
    <style name="tv_style_normal" parent="tv_style_parent">
        <item name="android:textSize">@dimen/len_16</item>
    </style>

  <!--Project页面按钮-->
    <style name="project_activity_btn" parent="btn_style_parent">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/edit_bg1</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@color/black_alpha_112</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="btn_unclikable" parent="btn_style_parent">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@color/gray_dividing</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textColor">@color/black_alpha_112</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!--动画-->
    <style name="translate_style" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/view_fade_in</item>
        <item name="android:windowExitAnimation">@anim/view_fade_out</item>
    </style>

    <style name="AnimUp" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>
    <!--menu items 间隔设置-->
    <style name="Toolbar.MenuItem" parent="Widget.AppCompat.ActionButton">
        <item name="android:paddingLeft">0dip</item>
        <item name="android:paddingRight">6dip</item>
        <item name="android:minWidth">36dp</item>
        <item name="android:minHeight">36dp</item>
    </style>

</resources>
