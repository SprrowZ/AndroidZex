<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="btn_style_parent">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="project_activity_btn" parent="btn_style_parent">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/project_btn_bk</item>
        <item name="android:layout_marginRight">80dp</item>
        <item name="android:layout_marginLeft">80dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">@color/black_alpha_112</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!--全屏DialogFragment-->
    <style name="full_screen_dialog_fragment" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="default_activity_theme" parent="Theme.AppCompat.NoActionBar">

    </style>

</resources>